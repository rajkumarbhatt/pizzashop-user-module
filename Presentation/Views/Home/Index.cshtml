@{
    Layout = null;
}

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PizzaShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>

@model DAL.ViewModels.LoginViewModel;
<div class="sma container-fluid row bg-color main-container position-absolute h-100">

        <!-- left container -->
        <div class="d-none d-md-block col-sm-12 col-md-6 img-container">
            <img class="img-fluid object-fit-cover h-100" src="~/images/dominos_background.jpg" alt="">
        </div>

        <!-- right container -->
        <div class="h-100 col-sm-12 col-md-6 right-part d-flex flex-column align-items-center justify-content-center">
            
            <!-- logo and heading -->
            <div class="container-fluid d-flex gap-md-1 gap-lg-2 gap-xl-4 align-items-center justify-content-center heading-container">
                <img class="logo-img" src="~/images/logos/pizzashop_logo.png" alt="">
                <h1 class="right-heading">PIZZASHOP</h1>
            </div>
            
            <!-- welcome message -->
            <div class="container-fluid d-flex flex-column align-items-center justify-content-center">
                <p class="welcome-message margin-left align-self-center align-self-md-start mb-3 mt-3">Welcome,</p>

                <!-- form -->
                <form action="" name="login-form" id="login-form" class=" form-container d-flex flex-column align-items-center justify-content-center gap-3">
                    <div class="input-group d-flex flex-column">
                        <input type="email" id="email" name="email" placeholder="Email*" class="form-control w-100 p-2" asp-for="@Model.Email">
                        <img class="small-image image-in-input" src="~/images/icons/person.svg" alt="">
                        <p id="email-error" class="error-message small "></p>
                    </div>
                    <div class="input-group d-flex flex-column">
                        <input type="password" id="password" name="password" placeholder="Password*" class="form-control p-2 w-100" asp-for="@Model.Password">
                        <img id="show-password" class="small-image image-in-input" onclick="showAndHidePassword(true)" src="~/images/icons/show-password.svg" alt="">
                        <img id="hide-password" class="small-image image-in-input d-none" onclick="showAndHidePassword(false)" src="~/images/icons/hide-password.svg" alt="">
                        <p id="password-error" class="error-message small"></p>
                    </div>
                    <div class="d-flex justify-content-between w-100 small">
                        <div>                           
                            <input type="checkbox" name="remember-me" id="remember-me">
                            <label for="remember-me">Remember me</label>
                        </div>
                        <a asp-controller="ForgotPassword" asp-action="Index" class="text-decoration-none">Forgot Password</a>
                    </div>
                    <button id="submit" class="btn w-100 btn-primary">Login</button>
                    <p id="login-error" class="error-message small "></p>
                </form>
            </div>
        </div>
        
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/login.js" asp-append-version="true"></script>